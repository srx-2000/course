<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/frame"
        >

    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/comment_avatar"
            android:src="@drawable/avatar1"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_nickName"
            android:layout_toRightOf="@id/comment_avatar"
            android:text="测试用户1"
            android:layout_marginLeft="5dp"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/position_num"
            android:layout_toRightOf="@id/comment_avatar"
            android:layout_below="@id/user_nickName"
            android:text="1楼"
            android:layout_marginTop="3.5dp"
            android:textSize="10dp"
            android:layout_marginLeft="5dp"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="|"
            android:layout_toRightOf="@id/position_num"
            android:layout_below="@id/user_nickName"
            android:layout_marginLeft="5dp"
            android:textColor="@color/littleGrey"
            android:id="@+id/delimiter"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comment_time"
            android:layout_toRightOf="@id/delimiter"
            android:layout_below="@id/user_nickName"
            android:text="5分钟前"
            android:layout_marginTop="3.5dp"
            android:textSize="10dp"
            android:layout_marginLeft="5dp"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comment_content"
            android:text="测试内容"
            android:layout_below="@id/comment_avatar"
            android:layout_marginTop="10dp"
            android:textColor="@color/darkBlack"
            android:textSize="13dp"
            android:layout_alignLeft="@id/position_num"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:backgroundTint="@color/grey"
            android:layout_below="@id/comment_content"
            android:gravity="right"
            android:clickable="true"
            android:id="@+id/show_reply">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共有10条回复"
                android:layout_marginRight="10dp"
                android:id="@+id/reply_count"
                />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow"
                android:layout_marginRight="10dp"/>

    </LinearLayout>

</RelativeLayout>
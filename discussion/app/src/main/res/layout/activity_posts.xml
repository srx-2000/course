<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/closeWhite"
        tools:context=".Actitvity.postsActivity"
        >


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            android:padding="10dp"
            android:id="@+id/back"
            />

    <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_below="@id/back"
            android:background="@color/littleGrey"
            android:layout_marginTop="5dp"
            android:id="@+id/line1"/>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:id="@+id/title_layout"
            >

        <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/avatar"
                android:padding="10dp"
                android:id="@+id/posts_avatar"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试贴吧1"
                android:layout_alignTop="@id/posts_avatar"
                android:layout_toRightOf="@id/posts_avatar"
                android:paddingVertical="10dp"
                android:id="@+id/posts_title"
                android:textColor="@color/darkBlack"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帖子"
                android:id="@+id/post_count_text"
                android:layout_below="@id/posts_title"
                android:layout_toRightOf="@id/posts_avatar"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500"
                android:id="@+id/post_count"
                android:layout_below="@id/posts_title"
                android:layout_toRightOf="@id/post_count_text"
                android:paddingHorizontal="10dp"
                />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="关注"
                android:id="@+id/follow"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_btn"/>
    </RelativeLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_layout"
            android:text="按帖子创建时间排序"
            android:layout_marginTop="10dp"
            android:textColor="@color/darkBlack"
            android:paddingHorizontal="10dp"
            android:id="@+id/order_text"/>

    <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_below="@id/order_text"
            android:background="@color/littleGrey"
            android:layout_marginTop="5dp"
            android:id="@+id/line"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/line"
            android:id="@+id/post_refresh"
            >

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/post_recyclerView"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/add_sign"
            android:backgroundTint="@color/blue"
            android:layout_margin="20dp"
            android:id="@+id/add_button"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Actitvity.userInfoDetail"
        >

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            android:id="@+id/back"
            android:clickable="true"
            android:padding="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的资料"
            android:textColor="@color/darkBlack"
            android:layout_centerHorizontal="true"
            android:padding="16dp"
            android:id="@+id/myInfo_text"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="保存"
            android:layout_alignParentRight="true"
            android:id="@+id/save_info"
            android:padding="16dp"
            android:clickable="true"
            />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            >
        <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/user_avatar"
                android:src="@drawable/avatar1"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:layout_below="@id/user_avatar"
                android:layout_marginTop="40dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:id="@+id/username_text"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:text="srx"
                android:layout_toRightOf="@id/username_text"
                android:layout_alignTop="@id/username_text"
                android:layout_marginLeft="30dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:layout_below="@id/username_text"
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@id/username_text"
                android:id="@+id/user_nickName_text"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_nickName"
                android:text="beir"
                android:layout_alignLeft="@id/username"
                android:layout_alignTop="@id/user_nickName_text"
                android:textColor="@color/darkBlack"
                android:textSize="12dp"
                android:background="@null"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:layout_below="@id/user_nickName_text"
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@id/username_text"
                android:id="@+id/sex_text"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sex"
                android:text="男"
                android:layout_alignLeft="@id/username"
                android:layout_alignTop="@id/sex_text"
                android:textColor="@color/darkBlack"
                android:textSize="12dp"
                android:background="@null"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址"
                android:layout_below="@id/sex_text"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:id="@+id/address_text"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address"
                android:text="北京"
                android:layout_alignLeft="@id/username"
                android:layout_alignTop="@id/address_text"
                android:textColor="@color/darkBlack"
                android:textSize="12dp"
                android:background="@null"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年龄"
                android:layout_below="@id/address_text"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:id="@+id/age_text"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/age"
                android:text="20"
                android:layout_alignLeft="@id/username"
                android:layout_alignTop="@id/age_text"
                android:textColor="@color/darkBlack"
                android:textSize="12dp"
                android:background="@null"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个性签名"
                android:layout_below="@id/age_text"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:id="@+id/self_signature_text"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/self_signature"
                android:text="我不做人了！！！！jojo！！！！"
                android:layout_alignLeft="@id/username"
                android:layout_alignTop="@id/self_signature_text"
                android:textColor="@color/darkBlack"
                android:textSize="12dp"
                android:background="@null"
                />
    </RelativeLayout>


</RelativeLayout>